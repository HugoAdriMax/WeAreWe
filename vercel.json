{
  "version": 2,
  "routes": [
    {
      "src": "/api/articles",
      "methods": ["GET", "POST"],
      "dest": "/api/articles"
    },
    {
      "src": "/api/articles/(.*)",
      "methods": ["GET", "PUT", "DELETE"],
      "dest": "/api/articles/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/articles/:id",
      "destination": "/api/articles/:id"
    }
  ]
}
